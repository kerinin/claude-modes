{
  "name": "claude-modes",
  "version": "0.1.0",
  "description": "Modal execution for Claude Code - enforce workflows like TDD by limiting actions based on current mode",
  "type": "module",
  "main": "dist/combined-server.js",
  "scripts": {
    "build": "tsc",
    "bundle": "npm run build && npx esbuild src/combined-server.ts --bundle --platform=node --target=node18 --format=cjs --outfile=server/bundle.cjs",
    "dev": "tsc --watch",
    "start": "node dist/combined-server.js",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "author": {
    "name": "Ryan Michael"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanmichaelhirst/claude-modes"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "picomatch": "^4.0.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/picomatch": "^4.0.2",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.24.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
