{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s --unix-socket \"$CLAUDE_PROJECT_DIR/.claude/mode.sock\" http://localhost/context 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s --unix-socket \"$CLAUDE_PROJECT_DIR/.claude/mode.sock\" -X POST -d @- http://localhost/check-tool 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
